<Window x:Class="Directory_Scaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Directory_Scaner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnStart" 
                    Content="Start" 
                    Command="{Binding StartScanCommand}"
                    Width="70" Height="28" 
                    Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" 
                    Content="Cancel" 
                    Command="{Binding CancelScanCommand}"
                    Width="70" Height="28"/>
            <TextBlock Text="{Binding ScanStatus}" 
                       Margin="10,5,0,0" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <TreeView Grid.Row="1" 
                  ItemsSource="{Binding DirectoryStructure}"
                  Margin="10">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type local:FolderViewModel}"
                                        ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/folder.png" 
                               Width="16" Height="16" 
                               Margin="0,0,5,0"/>
                        <TextBlock>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding Size}"/>
                            <Run Text=" bytes"/>
                            <Run Text=", "/>
                            <Run Text="{Binding Percentage}"/>
                            <Run Text="%)"/>
                        </TextBlock>
                    </StackPanel>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type local:FileViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Images/file.png" 
                               Width="16" Height="16" 
                               Margin="0,0,5,0"/>
                        <TextBlock>
                            <Run Text="{Binding Name}"/>
                            <Run Text=" ("/>
                            <Run Text="{Binding Size}"/>
                            <Run Text=" bytes"/>
                            <Run Text=", "/>
                            <Run Text="{Binding Percentage}"/>
                            <Run Text="%)"/>
                        </TextBlock>
                    </StackPanel>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
